<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rr1"
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:background="#00B49D">

        <EditText
            android:id="@+id/et_IP_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="center"
            android:hint="이름을 입력하세요"
            android:textColor="#ffffff"
            android:textSize="90px"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rr1"
        android:background="#ffffff"
        android:paddingLeft="80px"
        android:paddingRight="80px">

        <RelativeLayout
            android:id="@+id/rb_IP_family"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="70px"
            android:background="@drawable/insertpill_list_layout"
            android:paddingBottom="70px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:text="알림받을 가족"
                android:textColor="#000000"
                android:textSize="80px" />

            <TextView
                android:id="@+id/tv_IP_family"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="47dp"
                android:text=" "
                android:textColor="#000000"
                android:textSize="70px" />

            <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5px"
                android:src="@drawable/r_arrow" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="310px"
            android:background="@drawable/insertpill_list_layout"
            android:paddingBottom="70px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="복용 횟수"
                android:textColor="#000000"
                android:textSize="80px" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_IP_m"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_gravity="center"
                    android:src="@drawable/dosagi_m" />

                <TextView
                    android:id="@+id/tv_IP_dosagi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50px"
                    android:layout_marginRight="50px"
                    android:inputType="number"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="80px" />

                <ImageView
                    android:id="@+id/iv_IP_p"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_gravity="center"
                    android:src="@drawable/dosagi_p" />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rb_IP_day_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="530px"
            android:background="@drawable/insertpill_list_layout"
            android:paddingBottom="70px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="수신주기"
                android:textColor="#000000"
                android:textSize="80px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/tv_IP_day_time"
                android:text="하루에 "
                android:textColor="#000000"
                android:textSize="70px" />

            <TextView
                android:id="@+id/tv_IP_day_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/testeee"
                android:text="3"
                android:textColor="#000000"
                android:textSize="70px" />

            <TextView
                android:id="@+id/testeee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="44dp"
                android:text="번"
                android:textColor="#000000"
                android:textSize="70px" />

            <Spinner
                android:id="@+id/sp_IP_day_time"
                android:layout_width="50px"
                android:layout_height="80px"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="9px"
                android:layout_marginTop="5px"
                android:background="@drawable/r_arrow"></Spinner>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="730px"
            android:paddingBottom="50px">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <Button
                    android:id="@+id/bt_IP_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="90px"
                    android:layout_marginRight="40px"
                    android:background="@drawable/insertpill_time_bt"
                    android:text="오전 12:00"
                    android:textColor="#00B49D" />

                <Button
                    android:id="@+id/bt_IP_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="90px"
                    android:layout_marginRight="40px"
                    android:background="@drawable/insertpill_time_bt"
                    android:text="오전 12:00"
                    android:textColor="#00B49D" />

                <Button
                    android:id="@+id/bt_IP_time3"
                    android:layout_width="wrap_content"
                    android:layout_height="90px"
                    android:background="@drawable/insertpill_time_bt"
                    android:text="오전 12:00"
                    android:textColor="#00B49D" />
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <SlidingDrawer
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:allowSingleTap="true"
        android:animateOnClick="true"
        android:bottomOffset="5dp"
        android:content="@+id/content"
        android:handle="@+id/handle"
        android:orientation="vertical"
        android:topOffset="60dp">

        <ImageView
            android:id="@+id/handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/slidingbar" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="#00B49D"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/bt_sliding_cancel"
                        android:layout_width="70px"
                        android:layout_height="70px"
                        android:layout_marginLeft="80px"
                        android:layout_centerVertical="true"
                        android:background="@drawable/family_select_cancel" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="알림받을 가족"
                        android:textColor="#ffffff"
                        android:textSize="70px" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ListView
                    android:id="@+id/iv_sliding_family"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:choiceMode="multipleChoice"></ListView>
            </LinearLayout>

        </LinearLayout>
    </SlidingDrawer>


</RelativeLayout>
