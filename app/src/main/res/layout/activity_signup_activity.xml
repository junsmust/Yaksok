<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="이름"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/sign_name_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:focusable="true"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" I D"
                android:textStyle="bold"
                android:layout_weight="8"/>
            <EditText
                android:textSize="14dp"
                android:id="@+id/sign_id_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="영문 6자리 이상"
                android:textColor="#000000"
                android:focusable="true"
                android:layout_weight="4"/>

            <Button
                android:background="@drawable/y_btn"
                android:id="@+id/sign_check_id_btn"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="중복확인"
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_weight="8"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="P W"
                android:textStyle="bold"
                android:layout_weight="8"/>
            <EditText
                android:inputType="textPassword"
                android:textSize="14dp"
                android:layout_weight="4"
                android:id="@+id/sign_pw_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="비밀번호 입력"
                android:textColor="#000000"
                android:focusable="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8">

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"/>

            <EditText
                android:inputType="textPassword"
                android:textSize="14dp"
                android:id="@+id/sign_re_pw_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="재 확인"
                android:layout_weight="4"
                android:textColor="#000000"
                android:focusable="true"/>

            <Button
                android:background="@drawable/y_btn"
                android:id="@+id/sign_up_check_pw_btn"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="확 인"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_weight="8"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="생년월일"
                android:textStyle="bold"
                android:layout_weight="4"/>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/sign_year_spin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Spinner>


                <Spinner
                    android:id="@+id/sign_month_spin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Spinner>

                <Spinner
                    android:id="@+id/sign_day_spin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Spinner>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="전화번호"
                android:textStyle="bold"
                android:layout_weight="8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="4">
                <Spinner
                    android:textSize="13dp"
                    android:layout_weight="4"
                    android:id="@+id/sign_up_phone_company_spin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:entries="@array/phone_company">

                </Spinner>

                <EditText
                    android:inputType="phone"
                    android:textSize="14dp"
                    android:layout_weight="3"
                    android:id="@+id/sign_phone_number_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="-를 제외하고 입력"
                    />
            </LinearLayout>
            <Button
                android:background="@drawable/y_btn"
                android:id="@+id/sign_up_pn_register_btn"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="중복확인"
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_weight="8"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이메일"
                android:textStyle="bold"
                android:layout_weight="8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="horizontal">

                <EditText
                    android:layout_weight="3"
                    android:id="@+id/sign_email_yourself_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:focusable="true"/>
                <TextView
                    android:layout_weight="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text=" @"/>
                <EditText
                    android:textSize="14dp"
                    android:id="@+id/sign_email_yourself_address_edt"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="직접입력"/>
            </LinearLayout>
            <Button
                android:background="@drawable/y_btn"
                android:id="@+id/confirm_email_btn"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="확 인"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_weight="8"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_margin="10dp"
                android:id="@+id/sign_up_complete_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="등 록"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:background="@drawable/y_btn_2"/>
        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
