<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="아이디"
                android:textStyle="bold"
                android:layout_weight="8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:textSize="14dp"
                    android:id="@+id/sign_id_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="영문 6자리 이상"
                    android:textColor="#000000"
                    android:focusable="true"
                    android:layout_weight="2"
                    android:theme="@style/EditTheme"/>

                <Button
                    android:background="@drawable/green_line_rec"
                    android:id="@+id/sign_check_id_btn"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="중복확인"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/main_color"
                    android:layout_weight="6" />

            </LinearLayout>


        </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:textStyle="bold"
            android:layout_weight="8"/>
        <EditText
            android:inputType="textPassword"
            android:textSize="14dp"
            android:layout_weight="4"
            android:id="@+id/sign_pw_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="비밀번호"
            android:textColor="#000000"
            android:focusable="true"
            android:theme="@style/EditTheme"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="비밀번호 확인"
                android:textStyle="bold"
                android:layout_weight="8"/>
            <EditText
                android:inputType="textPassword"
                android:textSize="14dp"
                android:layout_weight="4"
                android:id="@+id/sign_re_pw_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="비밀번호 확인"
                android:textColor="#000000"
                android:focusable="true"
                android:theme="@style/EditTheme"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="이름"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/sign_name_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:focusable="true"
                android:textSize="14dp"
                android:hint="실명을 입력해주세요"
                android:theme="@style/EditTheme"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="전화번호"
                android:textStyle="bold"
                android:layout_weight="8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="4">
                <EditText
                    android:inputType="phone"
                    android:textSize="14dp"
                    android:layout_weight="2"
                    android:id="@+id/sign_phone_number_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="'-'구분없이 입력"
                    android:theme="@style/EditTheme"/>

                <Button
                    android:id="@+id/sign_up_pn_register_btn"
                    android:background="@drawable/green_line_rec"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="중복확인"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/main_color"
                    android:layout_weight="6"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이메일"
                android:textStyle="bold"
                android:layout_weight="8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="horizontal">

                <EditText
                    android:layout_weight="3"
                    android:id="@+id/sign_email_yourself_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:focusable="true"
                    android:gravity="center"
                    android:theme="@style/EditTheme"/>
                <TextView
                    android:layout_weight="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text=" @"/>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_gravity="center">
                    <EditText
                        android:id="@+id/sign_email_yourself_address_edt"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:visibility="gone"/>
                    <Spinner
                        android:textSize="14dp"
                        android:id="@+id/sign_email_spin"
                        android:layout_weight="3"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        />
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="생년월일"
                android:textStyle="bold"
                android:layout_weight="4"/>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/sign_year_spin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                </Spinner>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="년"/>


                <Spinner
                    android:id="@+id/sign_month_spin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                </Spinner>



                <Spinner
                    android:id="@+id/sign_day_spin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                </Spinner>


            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_margin="30dp"
            android:id="@+id/sign_up_complete_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="등록하기"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:background="@drawable/green_btn" />

    </LinearLayout>



</android.support.v4.widget.NestedScrollView>
