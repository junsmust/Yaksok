<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:elevation="0dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="아이디"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/sign_id_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:focusable="true"
                    android:hint="영문 6자리 이상"
                    android:inputType="textNoSuggestions"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/sign_check_id_btn"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="6"
                    android:elevation="0dp"
                    android:background="@drawable/green_line_rec"
                    android:text="중복확인"
                    android:textColor="@color/main_color"
                    android:textSize="11dp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="비밀번호"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/sign_pw_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textNoSuggestions">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:focusable="true"
                    android:hint="특수문자 포함 6자리 이상"
                    android:inputType="textPassword|textNoSuggestions"
                    android:textColor="@color/black"
                    android:textSize="14dp" />


            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="비밀번호 확인"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/sign_re_pw_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textNoSuggestions">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:focusable="true"
                    android:hint="비밀번호와 동일하게 입력"
                    android:inputType="textPassword|textNoSuggestions"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="이름"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/sign_name_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:maxLength="5"
                android:focusable="true"
                android:hint="실명을 입력해주세요"
                android:textColor="@color/black"
                android:textSize="14dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="전화번호"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                    <EditText
                        android:gravity="center_vertical|center_horizontal"
                        android:id="@+id/sign_phone_number_edt"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:hint="010"
                        android:maxLength="3"
                        android:inputType="phone"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/h1"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/sign_phone_number_edt"
                        android:text="-"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <EditText
                        android:id="@+id/sign_phone_number_edt_2"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/h1"
                        android:maxLength="4"
                        android:gravity="center_vertical|center_horizontal"
                        android:hint="1234"
                        android:inputType="phone"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/h2"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/sign_phone_number_edt_2"
                        android:text="-"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <EditText
                        android:id="@+id/sign_phone_number_edt_3"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/h1"
                        android:layout_toEndOf="@+id/h2"
                        android:gravity="center_vertical|center_horizontal"
                        android:hint="5678"
                        android:maxLength="4"
                        android:inputType="phone"
                        android:textColor="@color/black"
                        android:textSize="14dp" />
                </RelativeLayout>

                <Button
                    android:id="@+id/sign_up_pn_register_btn"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="6"
                    android:elevation="0dp"
                    android:background="@drawable/green_line_rec"
                    android:text="중복확인"
                    android:textColor="@color/main_color"
                    android:textSize="11dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="이메일"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/sign_email_yourself_edt"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:theme="@style/EditTheme" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" @"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <Spinner
                    android:gravity="center_vertical"
                    android:id="@+id/sign_email_spin"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="13dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/sign_email_yourself_address_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="생년월일"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/sign_year_spin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black">

                </Spinner>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="년"
                    android:textColor="@color/black" />


                <Spinner
                    android:id="@+id/sign_month_spin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"></Spinner>


                <Spinner
                    android:id="@+id/sign_day_spin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black">

                </Spinner>


            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/sign_up_complete_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:background="@drawable/green_btn"
            android:text="등록하기"
            android:elevation="0dp"
            android:textColor="#ffffff"
            android:textStyle="bold" />

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
