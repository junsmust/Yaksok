<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/pill_delete">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pill_delete"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/cd_add_category_img"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_gravity="center"
                android:alpha="90"
                android:src="@drawable/dialog_back" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
            android:id="@+id/cd_add_category_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="약 등록정보"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cd_add_category1_tv"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/cd_add_category_title_tv"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="약 이름 : "
            android:textDirection="locale" />

        <TextView
            android:id="@+id/cd_add_category2_tv"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cd_add_category1_tv"
            android:layout_marginLeft="20dp"
            android:text="등록날짜 : "
            android:textDirection="locale" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="120px">

        <Button
            android:id="@+id/cd_add_category_submit_bt"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:layout_marginRight="20px"
            android:background="@drawable/pill_delete_bt_delete"
            android:textColor="#ffffff"
            android:text="삭제" />
            <Button
                android:id="@+id/cd_add_category_cancel_bt"
                android:layout_width="wrap_content"
                android:layout_height="80px"
                android:text="취소"
                android:background="@drawable/pill_delete_bt_cancel"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Button" />
    </LinearLayout>
    </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
