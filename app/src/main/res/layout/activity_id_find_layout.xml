            <FrameLayout
                android:layout_marginTop="10dp"
                android:layout_width="310dp"
                android:layout_height="40dp"
                android:background="@drawable/id_pw_edittext_rect"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/et_find_id_phone"
                    android:layout_width="300dp"
                    android:inputType="phone"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="전화번호 입력(' - '없이 입력하세요)"
                    android:textSize="13dp"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:background="@null"/>

            </FrameLayout>

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/find_ID_btn"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:background="@drawable/login_btn_corner"
                android:text="아이디 찾기"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="회원가입시 등록한 전화번호를 입력하세요."
                />
        </LinearLayout>

    <!--[아이디와 이메일을 통해 이메일로 임시비밀번호를 발송한다.]
    HTTP POST /users/{id}/emails/{email}/passwords
    {id} : id
    {email} : email
    200 : OK
    403 : Not authorized
    500 : Server Error
-->


    </LinearLayout>
