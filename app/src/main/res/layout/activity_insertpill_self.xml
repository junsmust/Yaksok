<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="약 이름"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/et_DiseaseName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">



                <LinearLayout
                    android:id="@+id/lo_EditText"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_margin="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="약 성분"
                    tools:ignore="NestedWeights" />
                <Button
                    android:id="@+id/bt_ListAdd"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0.1"
                    android:background="@color/main_color"
                    android:text="추가하기"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center"


                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_margin="15dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="복용 횟수 "
                    android:layout_gravity="center"
                    android:layout_weight="0.2"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/minus_count"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/minus"
                        />
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="총" />

                    <TextView
                        android:id="@+id/et_Dosagi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:inputType="number" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="회 복용" />
                    <ImageView
                        android:id="@+id/plus_count"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/plus"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="약 복용 시간" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginStart="20dp">
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1회차    " />

                <TextView
                    android:id="@+id/tv_1_h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="없음" />


                <TextView
                    android:id="@+id/tv_1_m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="          " />

                <Button
                    android:id="@+id/bt_1time"
                    android:layout_marginLeft="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/timeadd"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2회차    " />

                <TextView
                    android:id="@+id/tv_2_h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="없음" />


                <TextView
                    android:id="@+id/tv_2_m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="          "/>


                <Button
                    android:layout_marginLeft="10dp"
                    android:id="@+id/bt_2time"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/timeadd"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3회차    " />

                <TextView
                    android:id="@+id/tv_3_h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="없음" />


                <TextView
                    android:id="@+id/tv_3_m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="          " />


                <Button
                    android:layout_marginLeft="10dp"
                    android:id="@+id/bt_3time"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/timeadd"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <Button
                    android:id="@+id/bt_AlarmReciveFamily"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="알림 받을 가족 선택"
                    android:textStyle="bold"
                    android:background="@color/main_color"
                    android:textColor="#ffffff"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lv_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <ListView
                    android:id="@+id/lv_alarmFamily"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </ListView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <Button
                    android:id="@+id/bt_PillInsert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="등 록"
                    android:textStyle="bold"
                    android:background="@color/main_color"
                    android:textColor="#ffffff"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
