<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="290px"
        android:background="#00B49D">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/settings_wartermark"
                android:layout_marginLeft="330px"/>
        </FrameLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tv_settings_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="120px"
                android:textColor="#ffffff"
                android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_settings_name"
            android:layout_marginTop="15px"
            android:layout_marginLeft="120px"
            android:textColor="#C2EEE7"
            android:text="오늘 하루도 힘내세요!" />
        </RelativeLayout>

        <Button
            android:id="@+id/bt_settings_mypage"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:layout_marginRight="120px"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/setting_mypage_bt"
            android:textColor="#ffffff"
            android:textSize="13dp"
            android:text="내 정보관리" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="#F5F5F5"
        android:paddingTop="80px"
        android:layout_below="@+id/rl1">
        <TextView
            android:id="@+id/set1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:text="설정"
            android:layout_marginBottom="10dp"/>
        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:background="#ffffff"
            android:layout_below="@+id/set1">
            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:textSize="17dp"
                android:text="자동 로그인"/>
            <Switch
                android:id="@+id/sw_autoLog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/set2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:layout_marginTop="80px"
            android:layout_below="@+id/rl2"
            android:text="앱 정보"
            android:layout_marginBottom="10dp"/>
        <RelativeLayout
            android:id="@+id/rl3"
            android:layout_width="match_parent"
            android:layout_height="560px"
            android:background="#ffffff"
            android:layout_below="@+id/set2">
            <RelativeLayout
                android:paddingBottom="5dp"
                android:id="@+id/rl4"
                android:layout_width="match_parent"
                android:layout_height="160px"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20px"
                android:background="@drawable/settings_ver_underbar">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="17dp"
                    android:textColor="#000000"
                    android:text="배포 버전"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ver 1.0.0"
                    android:textSize="17dp"
                    android:textColor="#000000"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:paddingBottom="5dp"
                android:id="@+id/rl5"
                android:layout_below="@+id/rl4"
                android:layout_width="match_parent"
                android:layout_height="160px"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20px"
                android:background="@drawable/settings_ver_underbar">>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"
                    android:textSize="17dp"
                    android:text="빌드 버전"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ver 1.1.1"
                    android:textSize="17dp"
                    android:textColor="#000000"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:paddingBottom="5dp"
                android:id="@+id/rb_de_info"
                android:layout_below="@+id/rl5"
                android:layout_width="match_parent"
                android:layout_height="160px"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20px">
                <TextView
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="17dp"
                    android:text="개발자 정보"/>
            </RelativeLayout>



        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
