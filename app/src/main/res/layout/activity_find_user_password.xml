<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <FrameLayout
            android:layout_marginTop="10dp"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:background="@drawable/id_pw_edittext_rect"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/find_pw_id_edt"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="아이디 입력"
                android:textSize="13dp"
                android:maxLength="20"
                android:singleLine="true"
                android:background="@null"/>

        </FrameLayout>

        <FrameLayout
            android:layout_marginTop="10dp"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:background="@drawable/id_pw_edittext_rect"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/find_pw_email_edt"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="이메일 입력"
                android:textSize="13dp"
                android:maxLength="20"
                android:singleLine="true"
                android:background="@null"/>

        </FrameLayout>

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/find_pw_btn"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/login_btn_corner"
            android:text="비밀번호 찾기"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="회원가입시 등록하신 이메일로 임시 비밀번호가 전송됩니다."
           />
    </LinearLayout>





</LinearLayout>