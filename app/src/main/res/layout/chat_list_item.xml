<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:orientation="vertical"
    android:layout_weight="1"
    android:background="#ffffff">
    <!-- <ImageView
         android:id="@+id/pn_user"
         android:layout_width="50dp"
         android:layout_height="wrap_content"
         android:src="@drawable/user_pic"
         android:layout_margin="10dp"/>-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="65dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/chat_first_tv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/family_item_register_firstname"
            android:text="T"
            android:textColor="@color/main_color"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"/>

    </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:id="@+id/chat_info_linear"
            android:weightSum="3"
            android:gravity="center"
            android:layout_margin="10dp">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/chat_list_item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이름"
                        android:textSize="18sp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_weight="9"
                        android:layout_gravity="bottom"
                        />
                    <TextView
                        android:id="@+id/chat_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3시간 전"
                        android:layout_weight="1"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="25dp"

                        />

                </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/chat_list_item_pn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="배고프냐"
                    android:textSize="15sp"
                    android:textColor="@color/black"



                    />

            </RelativeLayout>



            </LinearLayout>

        </LinearLayout>



</LinearLayout>









